.count {
  width: 90%;
  height: 58%;
  margin-left: 5%;
  background: rgba(255, 255, 255, 1);
}

.login {
  width: 82%;
  margin-top: 7.6%;
  margin-left: 9%;
  height: 40px;
  background: rgba(2, 193, 196, 1);
  border-radius: 20px;
  font-size: 16px;
  color: rgba(255, 255, 255, 1);
  line-height: 40px;
  text-align: center;
  display: block;
}

.navbar {
  display: flex;
  position: absolute;
  left: 0;
  top: 0;
  z-index: 500;
  width: 100%;
  height: 50px;
  flex-direction: row;
  text-align: center;
  color: #a8a8a8;
  font-size: 15px;
  box-sizing: border-box;
  background-color: #fff;
  border-bottom: 1rpx solid #dfdfdf;
}

.navbar-item {
  flex: 1;
  padding: 26rpx 0px;
}

.navbar-item-active {
  transition: all 0.3s;
  border-bottom: 6rpx solid #1a6be6;
  color: #1a6be6;
}

.movie-content-wrapper {
  padding-top: 40px;
  width: 100%;
}

.logo {
  width: 56px;
  height: 56px;
}

.username {
  width: 82%;
  height: 40px;
  color: #333;
  margin: 5% 9%;
  background: rgba(255, 255, 255, 1);
  border-radius: 4px;
  border: 1px solid rgba(217, 217, 217, 1);
  font-size: 16px;
  line-height: 24px;
}

#account {
  background: url(data:image/png;base64,) no-repeat;
  background-size: 8%;
  background-position: 5%;
  padding-left: 40px;
}

#password {
  background: url(data:image/png;base64,) no-repeat;
  background-size: 8%;
  background-position: 5%;
  padding-left: 40px;
}

input::-webkit-input-placeholder {
  color: rgba(0, 0, 0, 0.25);
}
