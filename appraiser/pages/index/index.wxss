.all {
  width: 100%;
  background-color: #f1f1f1;
  display: flex;
  flex-direction: column;
  /* position: absolute; */
  overflow-x: hidden
}

.topbar {
  width: 100%;
  height: 56px;
  background: rgba(255, 255, 255, 1);
  /* position: fixed; */
  /* z-index: 1; */
  top: 0;
  display: flex;
  flex-direction: row;
  justify-content: space-between
}

.appraisal, .number {
  width: 88px;
  height: 32px;
  background: rgba(255, 255, 255, 1);
  border-radius: 4px 0px 0px 4px;
  border: 1.2px solid rgba(34, 34, 34, 1);
  font-size: 16px;
  line-height: 30px;
  float: left;
  margin-top: 12px;
  text-align: center;
}

.appraisal {
  margin-left: 12px;
  border-radius: 4px 0px 0px 4px;
  border-style: solid none solid solid;
}

.number {
  border-radius: 4px 4px 4px 4px;
  border-style: solid solid solid solid;
  float: right;
  margin-right: 2%
}

.formid_but{
background:  #ffffff;
}

#user {
  float: right;
  line-height: 56px;
  margin-right: 12px;
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
}

#userid{
  line-height: 56px;
  margin-left: 12px;
  text-align: center
}

.appraisal-review {
  background: rgba(253, 150, 33, 1); /*待鉴定标签颜色*/
