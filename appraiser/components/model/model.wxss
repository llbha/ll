.exchange-modal {
    width: 100%;
    height: 100%;
    position: fixed;
    z-index: 9999;
    top: 0;
    left: 0;
    background-color: rgba(25, 26, 30, 0.6);
    opacity: 0;
    overflow: hidden;
}

.showTipsModal {
    animation: ani-show 0.3s both;
}

.hideTipsModal {
    animation: ani-hide 0.3s both;
    display: none;
}

.exchange-block {
    width: 620rpx;
    background: #fff;
    border-radius: 16rpx;
    padding: 48rpx;
    box-sizing: border-box;
    position: absolute;
    left: 50%;
    top: 50%;
    transform: translate(-50%, -50%);
    overflow: visible;
    z-index: 1002;
}

.modal-content-block {
    font-size: 34rpx;
    color: #333;
    line-height: 64rpx;
    margin-bottom: 48rpx;
    clear: both;
    text-align: left;
    letter-spacing: 3rpx;
}

.btn.primary {
    font-weight: bold;
    color: #fff;
    background-color: #1a6be6;
    box-shadow: 0rpx 4rpx 12rpx RGBA(255, 192, 73, 0.5);
}

.btn.largeplus {
    height: 90rpx;
    line-height: 90rpx;
    border-radius: 49rpx;
    font-size: 34rpx;
    padding: 0 62rpx;
    font-weight: bold;
    letter-spacing: 4rpx;
}


@keyframes ani-show {
    0% {
        opacity: 0;
    }

    100% {
        opacity: 1;
    }
}

@keyframes ani-hide {
    0% {
        opacity: 1;
    }

    100% {
        opacity: 0;
    }
}